# ============================================================================
# FILE STORAGE SETTINGS
# ============================================================================
# Path for uploaded CSV files
UPLOAD_DIR=./data/uploads

# Path for saved model checkpoints
MODEL_DIR=./data/models

# Maximum file size in megabytes
MAX_UPLOAD_SIZE_MB=100

# Allowed file extensions (comma-separated, e.g., .csv,.xlsx)
# Note: In environment variables, use comma-separated values
# ALLOWED_EXTENSIONS=.csv

# ============================================================================
# DATA PROCESSING SETTINGS
# ============================================================================
# Name of target column for model training
DEFAULT_TARGET_COLUMN=target

# Name of ID column for account identification
DEFAULT_ID_COLUMN=account_id

# Name of segment column for data segmentation
DEFAULT_SEGMENT_COLUMN=segment

# Proportion of data to use for test split (0.0 to 1.0)
DEFAULT_TEST_SIZE=0.30

# Random seed for reproducibility
RANDOM_STATE=42

# ============================================================================
# NEURAL NETWORK DEFAULTS
# ============================================================================
# Default neural network architecture (comma-separated integers)
# Example: 32,16 for two hidden layers with 32 and 16 neurons
# DEFAULT_HIDDEN_LAYERS=32,16

# Default activation function for hidden layers
DEFAULT_ACTIVATION=relu

# Default dropout rate for regularization (0.0 to 1.0)
DEFAULT_DROPOUT_RATE=0.2

# Default learning rate for optimizer
DEFAULT_LEARNING_RATE=0.001

# Default batch size for training
DEFAULT_BATCH_SIZE=256

# Default maximum number of training epochs
DEFAULT_EPOCHS=100

# Default patience for early stopping (epochs to wait before stopping)
DEFAULT_EARLY_STOPPING_PATIENCE=15

# ============================================================================
# REGULARIZATION DEFAULTS
# ============================================================================
# L1 regularization strength (Lasso regularization)
DEFAULT_L1_LAMBDA=0.0

# L2 regularization strength (Ridge regularization)
DEFAULT_L2_LAMBDA=0.01

# Whether to use batch normalization by default (true/false)
DEFAULT_USE_BATCH_NORM=true

# ============================================================================
# LOSS FUNCTION DEFAULTS
# ============================================================================
# Default loss function type (e.g., 'bce', 'focal', 'combined')
DEFAULT_LOSS_TYPE=combined

# BCE weight in combined loss function (0.0 to 1.0)
DEFAULT_LOSS_ALPHA=0.3

# Gamma parameter for soft AUC loss function
DEFAULT_AUC_GAMMA=2.0

# ============================================================================
# SCORECARD SCALING
# ============================================================================
# Minimum score in the scorecard scale
SCORE_MIN=0

# Maximum score in the scorecard scale
SCORE_MAX=100

# ============================================================================
# API SETTINGS
# ============================================================================
# API route prefix for all endpoints
API_PREFIX=/api

# Allowed CORS origins (comma-separated URLs)
# Example: http://localhost:5173,http://localhost:3000
CORS_ORIGINS=http://localhost:5173
